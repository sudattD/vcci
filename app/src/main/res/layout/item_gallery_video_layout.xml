<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_16sdp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        tools:ignore="RedundantNamespace">

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_72sdp">

            <vcci.android.consumer.util.RoundRectCornerImageView
                android:id="@+id/iv_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ibp_logo_splash"
                card_view:civ_border_color="#FF000000"
                card_view:civ_border_width="2dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/rl_image"
            android:layout_toRightOf="@+id/rl_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Lorem epsum I am a very good boy. I am here working as andorid"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_image"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toEndOf="@+id/rl_image"
            android:layout_toRightOf="@+id/rl_image"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            tools:ignore="MissingConstraints"
            tools:text="Date :" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>